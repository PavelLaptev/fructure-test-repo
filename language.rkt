(define (project stx)
  ; project: fruct -> sexpr
  (define @ project)
  (match stx
    ; strip top
    [`(‚óá ,x)
     (@ x)]
    ; transform mode
    #;[(/ (transform template) _/ (‚ñπ stx))
       `(‚ñπ [,stx -> ,(project template)])]
    ; label sorts of holes
    [(/ (sort sort) _/ (‚ñπ '‚äô))
     `(‚ñπ (‚äô ,sort))]
    ; flatten symbols
    [(/ _ `(id ,(/ [sort 'char] _ (and c (not '‚äô))) ... ,(/ [sort 'char] _ '‚äô) ...))
     (string->symbol (apply string-append (map symbol->string c)))]
    [(/ (sort sort) _/ '‚äô)
     `(‚äô ,sort)]
    ; embed cursor
    #;[(/ _/ (‚ñπ stx))
       `(‚ñπ ,(@ stx))]
    ; or nor
    [(/ _/ (‚ñπ stx))
     (@ stx)]
    [(/ _/ stx)
     (@ stx)]
    [(? list?) (map @ stx)] [x x]))


(define (stx->fruct stx)
  ; stx->fruct : sexpr -> fruct
  (define s2f stx->fruct)
  (match stx
    [(? (disjoin symbol? number?))
     (/ stx)]
    [`(‚ñπ ,(? (disjoin symbol? number?) s))
     (/ (‚ñπ s))]
    [`(‚ñπ (,(? form-id? a) ,as ...))
     (/ (‚ñπ `(,a ,@(map s2f as))))]
    [`(‚ñπ ,a)
     (/ (‚ñπ (map s2f a)))]
    [`(,(? form-id? a) ,as ...)
     (/ `(,a ,@(map s2f as)))]
    [(? list?)
     (/ (map s2f stx))]))


